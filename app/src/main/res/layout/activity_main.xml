<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:name="com.example.tvgym.MainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#6d9cd1"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/fitness_logo_png_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="475dp"
        android:layout_height="43dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/mainshape"
        android:hint="Name"
        android:padding="10dp"
        android:paddingStart="50dp"
        android:textColorHint="@color/lb_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="475dp"
        android:layout_height="43dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/mainshape"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingStart="50dp"
        android:textColorHint="@color/lb_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="466dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mainshape"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#6d9cd1"
        android:onClick="SignIn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>